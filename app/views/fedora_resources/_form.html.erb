<% form_target = [current_exhibit, @resource.becomes(FedoraResource)] %>
<% html_opts = {id: "new_resources_fedora"} %>

<%= bootstrap_form_for(form_target, as: :resource, html: html_opts) do |f| %>
  <%= f.label(:resource, "Fedora IDs:") %>
  <%= text_field_tag("resource[ids][]", nil, { class: "form-control", id: '' })  %>
  <div class="form-actions">
    <%= button_tag("Three More Fields", {type: nil, id: "3-more-btn", class: 'btn btn-secondary'}) %>
    <div class="primary-actions">
      <%= cancel_link(@resource, :back, class: 'btn btn-default') %>
      <%= f.submit t('.add_item'), class: 'btn btn-primary' %>
    </div>
  </div>
<% end if can? :manage, @resource %>
