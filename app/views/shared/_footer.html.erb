<div class="blue-footer">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <%= link_to image_tag('tuftsuniversity.png', :alt => 'Go to tufts.edu'), "http://www.tufts.edu" %>
      </div>

      <div class="row pull-right col-md-3">

        <ul class="nav navbar-nav">
          <!-- todo have sign out button -->
          <!-- todo different sign in for dev -->
          <% unless user_signed_in? %>
            <% if Rails.env.production? || Rails.env.tdldev? %>
              <li><%= link_to t('blacklight.header_links.login'), user_shibboleth_omniauth_authorize_path, method: :post %></li>
            <% else %>
              <%= link_to t('blacklight.header_links.login'), main_app.new_user_session_path, method: :post %>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>