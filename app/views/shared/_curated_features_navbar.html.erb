<% filtered_feature_pages = InMenuBehavior::Helper.menu_filter(current_exhibit.feature_pages) %>
<% if filtered_feature_pages.present? %>
  <% if filtered_feature_pages.many? %>
    <li class="nav-item dropdown">
      <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"><%= navigation.label_or_default %> <b class="caret"></b></a>
      <ul class="dropdown-menu">
        <% filtered_feature_pages.each do |page| %>
          <li><%= link_to page.title, [spotlight, page.exhibit, page], class: 'dropdown-item' %></li>
        <% end %>
      </ul>
    </li>
  <% else %>
    <li class="<%= "active" if current_page?(url_for([spotlight, filtered_feature_pages.first.exhibit, filtered_feature_pages.first])) %>"><%= link_to filtered_feature_pages.first.title, [spotlight, filtered_feature_pages.first.exhibit, filtered_feature_pages.first] %></li>
  <% end %>
<% end %>
